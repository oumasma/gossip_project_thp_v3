<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Inscription</title>
  </head>
 
  <body>
    <div class="row justify-content-md-center">
      <div class="col mb-4 text-center">

        <h1>Inscription</h1>
  
        <br/>

        <%= form_tag url_for(action: 'create'), method: "post" do %>
          
          <%= label_tag 'Pseudo : ' %> </br>
          <%= text_field_tag :user_pseudo %>
          <br />
          
          <%= label_tag 'PrÃ©nom : ' %> </br>
          <%= text_field_tag :user_first_name %>
          <br />

          <%= label_tag 'Nom : ' %> </br>
          <%= text_field_tag :user_last_name %>
          <br />

          <%= label_tag 'Age : ' %> </br>
          <%= text_field_tag :user_age %>
          <br />

          <%= label_tag 'Ville : ' %> </br>
          <%= text_field_tag :user_city %>
          <br />


          <%= label_tag 'Email : ' %> </br>
          <%= text_field_tag :user_email %>
          <br />

          <%= label_tag 'Description : ' %> </br>
          <%= text_area_tag :user_description %>
          <br />

          <%= label_tag 'Mot de passe : ' %> </br>
          <%= password_field_tag :user_password , nil, class: "form-control" %>
          <br/>

          <%= label_tag 'Confirmation mot de passe : ' %> </br>
          <%= password_field_tag :user_authentification , nil, class: "form-control"%>
          <br/>
          <%= label_tag "Se souvenir de moi" %>
          <%= check_box_tag :remember_me, 1, params[:remember_me] %>
          <br/>
          
          <%= submit_tag("Valider l'inscription", :class =>"btn btn-success") %>

        <% end %>
      </div>
    </div>
  </body>
</html>