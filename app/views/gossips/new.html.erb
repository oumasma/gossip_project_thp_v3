<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Créer un potin</title>
  </head>
 
  <body>
    <div class="row justify-content-md-center">
      <div class="col mb-4 text-center">

        <h1>Crée un potin !</h1>
        <p>Balance ton potin via le formulaire ci-dessous</p>
        <br/>

        <%= form_tag url_for(action: 'create'), method: "post" do %>
          
          <%= label_tag 'Renseigne un titre : ' %>
          <%= text_field_tag :gossip_title %>
          <br/>

          <%= label_tag 'Balance ton potin : ' %>
          <%= text_area_tag :gossip_content %>
          <br/>

          <br/>
          
          <%= submit_tag("Create Gossip", :class =>"btn btn-primary") %>

        <% end %>
      </div>
    </div>
  </body>
</html>